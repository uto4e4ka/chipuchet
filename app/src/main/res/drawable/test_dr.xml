<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CD000000"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:startColor="#779DFE"
                android:endColor="#88F5F1"
                android:centerX="0.2"
                android:centerY="0.2"
                android:angle="0.5"
                >
            </gradient>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>